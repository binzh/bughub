<div class="page-header" align="center">
  <h1><%= t('devise.views.links.sign_up') %></h1>
</div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div align="center">
      <table>
        <tr>
          <td><%= f.label :username %></td>
          <td><%= f.text_field :username %></td>
        </tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation %></td>
          <td><%= f.password_field :password_confirmation %></td>
        </tr>
        <tr>
          <td><%= render "devise/shared/links" %></td>
          <td align="right"><%= f.submit t('devise.views.links.sign_up'), :class => "btn btn-primary" %></td>
        </tr>
      </table>
<% end %>
</div>
