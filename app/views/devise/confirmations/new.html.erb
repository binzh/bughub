<div class="page-header" align="center">
  <h1><%= t('devise.views.confirmations.new.title') %></h1>
</div>
<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:method => :post}) do |f| %>
    <div align="center">
      <table>
        <tr>
          <td><%= f.label :login %></td>
          <td><%= f.text_field :login %></td>
        </tr>
        <tr>
          <td><%= render "devise/shared/links" %></td>
          <td align="right"><%= f.submit t('devise.views.confirmations.new.submit'), :class => "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
<% end %>